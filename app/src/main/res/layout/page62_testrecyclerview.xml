<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/backg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/txv_round"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txv_stopname"
        android:layout_width="300dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toTopOf="@id/backg"
        app:layout_constraintBottom_toTopOf="@+id/txv_direction"
        android:text="TextView"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/txv_direction"
        android:layout_width="300dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@id/txv_stopname"
        app:layout_constraintBottom_toTopOf="@+id/txv_platenumb"
        android:text="TextView"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/txv_platenumb"
        android:layout_width="300dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@+id/txv_direction"
        app:layout_constraintBottom_toTopOf="@id/txv_estimate"
        android:text="TextView"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/txv_estimate"
        android:layout_width="300dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintTop_toBottomOf="@+id/txv_platenumb"
        app:layout_constraintBottom_toBottomOf="@+id/backg"
        android:text="TextView"
        android:background="#ffffff"/>
</androidx.constraintlayout.widget.ConstraintLayout>