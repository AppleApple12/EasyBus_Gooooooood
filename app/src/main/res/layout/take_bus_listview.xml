<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/busimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:alpha="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/busdetails" />

        <TextView
            android:id="@+id/routename"
            android:layout_width="296dp"
            android:layout_height="88dp"
            android:background="#66FFFFFF"
            android:gravity="center"
            android:text=" 公  車  查  詢 "
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/busimg"
            app:layout_constraintEnd_toEndOf="@+id/busimg"
            app:layout_constraintStart_toStartOf="@+id/busimg"
            app:layout_constraintTop_toTopOf="@id/busimg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>