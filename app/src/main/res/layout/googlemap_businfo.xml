<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backg"
        android:layout_width="360dp"
        android:layout_height="110dp"
        android:padding="15dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/page5012_item" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="274dp"
        app:layout_constraintBottom_toBottomOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/backg"
        app:layout_constraintTop_toTopOf="@+id/backg"
        tools:srcCompat="@drawable/page5012modepic" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:text="Text"
        android:textColor="	#5B5B5B"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/backg"
        app:layout_constraintEnd_toEndOf="@+id/backg"
        app:layout_constraintStart_toEndOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/backg"
        app:layout_constraintVertical_bias="0.509" />

</androidx.constraintlayout.widget.ConstraintLayout>